// HTML document
html
  // Metadata and styles
  head
    meta(charset='UTF-8') // UTF-8 encoding
    meta(name='viewport', content='width=device-width, initial-scale=1.0') // Responsive viewport
    title EVERLOOP - Sustainable Fashion // Page title
    link(rel="icon" type="image" href="images/icon.jpg") // Favicon
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=favorite") // Material icons
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css") // Bootstrap CSS
    link(rel="stylesheet", href="password.css") // Custom styles

  // Page content
  body
    // Forgot password container
    .container
      h2 Forgot Password // Page heading
      // Password reset form
      form(action="/forgot" method="POST")
        label(for="email") Enter your email: // Email label
        input(type="email" name="email" required) // Email input
        button(type="submit") Send Reset Link // Submit button
      // Display message if present
      if message
        .message(class=message.includes('Error') ? 'error' : 'success') // Dynamic message class
          p= message // Message text