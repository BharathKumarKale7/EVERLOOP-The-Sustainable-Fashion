// Extend base layout
extends layout

// Main content block
block content
  // Kids' collection container
  .collection-container
    h1 Our Kids' Collection // Page heading
    p Discover the latest trends in kids' fashion // Intro text
    // Kids' dresses section
    section.kids-dresses
      h2 Featured Kids' Dresses // Section heading
      // Grid for dress items
      .dress-container.mt-2
        .row.g-4.justify-content-center // Bootstrap grid
          // Loop through items
          each item in items
            .col-6.col-md-3.text-center // Grid column
              // Product link
              a.box(href=`/product/${item.id}`)
                // Item image
                .image-container
                  img.box-image(src=item.image, alt=item.name)
                // Item details
                .dress-info
                  h3.box-heading= item.name // Item name
                  p From Â£#{item.price} // Item price