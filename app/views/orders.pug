//- Extends the base layout (likely includes shared page structure)
extends layout

block content
  //- Main container with custom and Bootstrap classes
  .m-container.container
    h1 My Orders

    //- Check if there are any orders
    if orders.length
      //- Loop through each order
      each order in orders
        .card.mb-3
          .card-header
            h5 Order ##{order.id} - #{order.status}
            p Placed on: #{order.created_at}
          .card-body
            h6 Items:
            ul
              //- Display each item's info (this assumes one item per order; see note below)
              li #{order.name} - £#{order.price} x #{order.quantity}
            p
              strong Total: £#{order.total}
            p
              strong Shipping Address:
              | #{order.address_id ? 'Address ID: ' + order.address_id : 'Not specified'}
    else
      //- Message shown when no orders exist
      p.text-muted You have no orders yet.
      a.btn.btn-primary(href="/") Continue Shopping
