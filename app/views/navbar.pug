// Notification banner for first-time users
h1.top-heading.fixed-top 
  | FREE SHIPPING ON YOUR FIRST ORDER | SHOP NOW

// Main header container
header.container-fluid
  // Navigation bar
  nav.navbar.navbar-expand-lg.navbar-light.bg-white.shadow-sm.mt-4.fixed-top
    div.container-fluid.d-flex.justify-content-between
      // Brand logo centered on medium to large screens
      a.navbar-brand.order-2.order-lg-1.mx-md-auto(href="/")
        img.brand-icon(src="/images/icon.jpg", alt="EverLoop Icon") 

      // Hamburger icon for mobile view
      button.navbar-toggler.order-1.d-lg-none(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav")
        span.navbar-toggler-icon

      // Collapsible nav items (visible in desktop and toggled in mobile)
      div#navbarNav.collapse.navbar-collapse.order-lg-2.order-4
        div.navbar-nav.mr-auto
          a.nav-item.nav-link(href="/men") Men 
          a.nav-item.nav-link(href="/women") Women
          a.nav-item.nav-link(href="/kids") Kids
          a.nav-item.nav-link(href="/accessories") Accessories

      // Icons section: Cart, Wishlist, and conditionally Home/Login/Profile
      div.icons-container.order-3.d-flex.align-items-center#user-actions
        a.nav-item.nav-link(href="/cart") 🛒 Cart
        a.nav-item.nav-link(href="/wishlist") ❤️ Wishlist

        // Show Home link only if not on home page
        if url !== '/'
          a.nav-item.nav-link(href="/") 🏠 Home 

        // User-specific options if logged in
        if loggedIn
          .nav-item.dropdown
            a#userDropdown.nav-link.dropdown-toggle(href="/", role="button", data-bs-toggle="dropdown", aria-expanded="false")
              | Hi! 
              span.fw-bold #{username.charAt(0).toUpperCase() + username.slice(1)}
            ul.dropdown-menu.dropdown-menu-end(aria-labelledby="userDropdown")
              li
                a.dropdown-item(href="/profile") 👤 My Profile
              li
                a.dropdown-item(href="/orders") 📦 My Orders
              li
                hr.dropdown-divider
              li
                a.dropdown-item(href="/logout") 🚪 Logout

        // Show Login if not logged in
        else
          a.nav-item.nav-link(href="/login") 🔑 Login
