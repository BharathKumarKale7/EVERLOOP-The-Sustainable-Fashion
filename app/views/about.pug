// HTML document
html
  // Metadata and styles
  head
    meta(charset='UTF-8') // UTF-8 encoding
    meta(name='viewport', content='width=device-width, initial-scale=1.0') // Responsive viewport
    title EVERLOOP - Sustainable Fashion // Page title
    link(rel="icon" type="image" href="/images/icon.jpg") // Favicon
    link(rel="stylesheet", href="/styles.css") // Custom styles
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0") // Material icons
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css") // Bootstrap CSS

  body
    include navbar // Navbar component

    // About page header
    header.about-header
      .about-header-links // Header links container
      img.about-logo(src="images/icon.jpg", alt="Everloop Logo") // Logo
      h1 About EverLoop // Main heading

    // About content
    section.about-section
      div.about-company-origin
        h2 Our Origin // Section heading
        p // Mission and founding story
        img.about-about-image(src="images/susta-about.jpg", alt="Sustainable Fashion Origin") // Origin image

      div.about-company-goal
        h2 Our Goal // Section heading
        p // Sustainable fashion mission
        img.about-about-image(src="images/goal.jpg", alt="GreenStitch Goal") // Goal image

      div.about-company-goals
        h2 Our Goals // Section heading
        ul // List of objectives
          li
            strong Promote Sustainable Fashion: 
            | Eco-friendly clothing access
          li
            strong Reduce Textile Waste: 
            | Minimize landfill waste
          li
            strong Raise Awareness: 
            | Educate on fast fashion
          li
            strong Support Local Communities: 
            | Empower artisans

      div.about-environmental-impact
        h2 Our Environmental Impact // Section heading
        p // Environmental benefits
        img.about-about-image(src="images/envi.jpg", alt="Environmental Impact") // Impact image

    footer.about-footer-container
      div.d-flex.flex-row.justify-content-center // Centered footer
        img.about-copyright-image(src="images/copyright.png", alt="Copyright") // Copyright icon
        h1.about-bottom-heading 2025 Everloop, Inc. // Copyright notice