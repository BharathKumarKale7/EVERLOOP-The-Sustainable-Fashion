doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title EVERLOOP - Sustainable Fashion
    link(rel="icon" type="image" href="images/icon.jpg")
    link(rel="stylesheet" href="/signup.css")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=favorite")
  body
    .container
      .signup-container
        img.logo(src="/images/icon.jpg" alt="Everloop Logo")
        h2 Create an Account
        if error
          .alert.alert-danger.mt-3= error
        form.signup-form(action="/submit" method="POST")
          input(type="hidden" name="_csrf" value=csrfToken)
          .form-group
            label(for="name") Full Name
            input#name.form-control(type="text" name="name" placeholder="Enter your full name" value=(typeof name !== 'undefined' ? name : '') required)
          .form-group
            label(for="email") Email
            input#email.form-control(type="email" name="email" placeholder="Enter your email" value=(typeof email !== 'undefined' ? email : '') required)
          .form-group
            label(for="password") Password
            input#password.form-control(type="password" name="password" placeholder="Enter your password" required)
          small.form-text.text-muted Password must be 8+ characters, with at least one uppercase letter, one lowercase letter, and one special character (e.g., !@#$%).
          .form-group
            label(for="confirm-password") Confirm Password
            input#confirm-password.form-control(type="password" name="confirm-password" placeholder="Confirm your password" required)
          button.signup-button(type="submit") Sign Up
        p.signup-link Already have an account? 
          a(href="/login") Login